{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <h1>Sortie index</h1>
    <div class="identifiant"><p>Participant : {{ app.user.pseudo }}</p></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Datedebut</th>
                <th>Duree</th>
                <th>Datecloture</th>
                <th>Nbinscriptionsmax</th>
                <th>Etat</th>
                <th>Organisateur</th>
                <th>Descriptioninfos</th>
                <th>Urlphoto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.id }}</td>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.datedebut ? sortie.datedebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.duree }}</td>
                <td>{{ sortie.datecloture ? sortie.datecloture|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.nbinscriptionsmax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>
                    <a href="{{ path('user_details', {'id': sortie.organisateur.id}) }}" title="vue organisateur">
                    {{ sortie.organisateur.nom }}</a>
                </td>
                <td>{{ sortie.descriptioninfos }}</td>

                <td>

                    <a href="{{ path('sortie_detail', {'id': sortie.id}) }}">Afficher</a>

                    <a href="{{ path('sortie_update', {'id': sortie.id}) }}">Modifier</a>
                    <a href="{{ path('sortie_inscription', {'id': sortie.id}) }}">S'inscrire</a>
                    <a href="{{ path('sortie_desister', {'id': sortie.id}) }}">Se désister</a>


                    {% if app.user.nom ==  sortie.organisateur.nom  %}
                        <a href="{{ path('sortie_update', {'id': sortie.id}) }}">Modifier</a>
                        {% if sortie.etat.libelle !=  'annulée'  %}
                        <a href="{{ path('sortie_annuler', {'id': sortie.id}) }}">Annuler</a>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('sortie_inscription', {'id': sortie.id}) }}">S'inscrire</a>
                    {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sortie_create') }}">Create new</a>
{% endblock %}
